# ==== CONFIGURACIÓN RPA PRODUCTOS ====

# API de productos
FAKE_STORE_API_URL=https://fakestoreapi.com
API_TIMEOUT=30
API_RETRY_ATTEMPTS=3

# Base de datos
DATABASE_PATH=data/database/productos.db
DATABASE_BACKUP_ENABLED=true

# Microsoft Graph API (OneDrive) - CONFIGURAR CON TUS CREDENCIALES
AZURE_CLIENT_ID=your_client_id_here
AZURE_CLIENT_SECRET=your_client_secret_here
AZURE_TENANT_ID=your_tenant_id_here

# OneDrive paths
ONEDRIVE_JSON_PATH=RPA/Logs
ONEDRIVE_REPORTS_PATH=RPA/Reportes
ONEDRIVE_EVIDENCES_PATH=RPA/Evidencias

# Formulario web - CREAR Y CONFIGURAR TU FORMULARIO
FORM_URL=https://forms.google.com/d/e/1FAIpQLSc-example-form-id/viewform
FORM_TYPE=google_forms

# Selenium configuración
WEBDRIVER_HEADLESS=false
WEBDRIVER_TIMEOUT=30
SCREENSHOT_QUALITY=95

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_MAX_FILES=7

# Paths del proyecto
REPORTS_PATH=reports
LOGS_PATH=logs
EVIDENCES_PATH=evidencias
DATA_PATH=data

# Configuración de reportes
EXCEL_ENGINE=openpyxl
INCLUDE_CHARTS=true
REPORT_LANGUAGE=es

# Configuración de red
HTTP_TIMEOUT=30
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=0.3

# Configuración de seguridad
ENCRYPT_SENSITIVE_LOGS=false
MASK_CREDENTIALS_IN_LOGS=true

# Configuración PIX RPA
PIX_STUDIO_VERSION=latest
PIX_PROJECT_NAME=RPA_Productos_Analysis
